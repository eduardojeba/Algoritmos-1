#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	int Suma,N,i;
	Suma=0;
	cout<<"ingrese N: ";
	cin>>N;
	while(N>0)
	{
	for(i=1;i<=N;i=i+2)
      Suma=Suma+i;
	cout<<"el resultado es: "<<Suma;
	cin>>N;
	}
	getch();
}


